<div class="container-fluid content-wrapper new-project">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= form_for criminal_defense do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "Keywords * must be in csv format" %>
          <%= f.text_field :keywords, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "Descriptions * limit to 160 characters" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control tinymce', :rows => 40, :cols => 100  %>
        </div>

        <%= f.submit %>
      <% end %>
      <%= tinymce %>
    </div>
  </div>
</div>
