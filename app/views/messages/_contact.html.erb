<%= form_for message do |f| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(message.errors.count, "error")} prohibited this message from being sent:" %>
      </h2>

      <ul>
        <% message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    </div>
  <% end %>

<div class="form-group form-sand shadow-box">
  <h2 class="form-title">Get a FREE Consultation</h2>
  <hr>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.phone_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>

  <div class="actions">
    <%= f.submit 'Send', class: 'button-denim button' %>
  </div>
</div>
<% end %>
